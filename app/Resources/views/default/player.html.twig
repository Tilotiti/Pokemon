{% extends 'base.html.twig' %}
{% block title %}Dresseur {{ user.username }}{% endblock %}
{% block body %}
    <div class="row animated-panel">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                        <div class="tools">
                            <a href="{{ path('index') }}" title="Classement général">
                                <i class="glyphicon glyphicon-list"></i>
                            </a>
                            {% if app.user == user %}
                                <a href="{{ path('account') }}" title="Modifier mon profil">
                                    <i class="glyphicon glyphicon-edit"></i>
                                </a>
                                {% if not is_granted('ROLE_PREVIOUS_ADMIN') %}
                                    <a href="#" id="refresh">
                                        <i class="glyphicon glyphicon-refresh"></i>
                                    </a>
                                {% endif %}
                            {% elseif is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('edit', {id: user.id}) }}" title="Modifier le profil de {{ user.username }}">
                                    <i class="glyphicon glyphicon-edit"></i>
                                </a>
                                <a href="{{ path('index', {
                                    _switch_user: user.email
                                }) }}" title="Se connecter à la place de {{ user.username }}">
                                    <i class="glyphicon glyphicon-lock"></i>
                                </a>
                            {% endif %}
                        </div>
                    {{ user.username }}
                    {% if user.name is not empty %}
                        - {{ user.name }}
                    {% endif %}
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-4 avatar">
                            <img src="{{ user.avatar }}"/>
                            <strong>{{ user.level }}</strong>
                            <div class="progressXP">
                                <div class="progress" style="width: {{ user.progress }}%"></div>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <dl class="dl-horizontal">
                                {% if app.user == user or is_granted('ROLE_ADMIN') %}
                                    <div><strong>Email</strong></div>
                                {% endif %}
                                <div><strong>Expérience</strong></div>
                                <div><strong>Km parcourus</strong></div>
                                <div><strong>Date d'inscription</strong></div>
                                <div><strong>Date de mise à jour</strong></div>
                                <div><strong>Pokédex</strong></div>
                                <div><strong>Pokémons possédés</strong></div>
                                <div><strong>Pokémons capturés</strong></div>
                                <div><strong>Pokémons évolués</strong></div>
                            </dl>
                        </div>
                        <div class="col-xs-4">
                            {% if app.user == user or is_granted('ROLE_ADMIN') %}
                                <div>{{ user.email }}</div>
                            {% endif %}
                            <div>{{ user.xp }}</div>
                            <div>{{ user.km }}</div>
                            <div>
                                {% if user.sign is not null %}
                                    {{ user.sign | date('d/m/Y') }}
                                {% else %}
                                    <em>Non renseignée</em>
                                {% endif %}
                            </div>
                            <div>
                                {% if user.lastUpdate is not null %}
                                    {{ user.lastUpdate | date('d/m/Y H:i') }}
                                {% else %}
                                    <em>Non renseignée</em>
                                {% endif %}
                            </div>
                            <div>{{ user.discovered }}</div>
                            <div>{{ user.pokedex | length }}</div>
                            <div>{{ user.catched }}</div>
                            <div>{{ user.evolved }}</div>
                        </div>
                        {% if user.cheater %}
                            <div class="col-xs-12">
                                <div class="alert alert-warning">
                                    Cet utilisateur est suspecté d'automatiser sa chasse, son compte n'apparaît donc pas dans les différentes statistiques et classements.
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Groupes
                </div>
                <div class="panel-body">
                    <table class="table table-stripped">
                        <thead>
                            <tr>
                                <th>Groupe</th>
                                <th class="text-center">Membres</th>
                                <th class="text-center">Points</th>
                                <th class="text-center">Pokédex</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for cluster in user.clusters %}
                                <tr>
                                    <td>
                                        <a href="{{ path('cluster_view', {
                                            'cluster': cluster.id
                                        }) }}" title="Voir le groupe">
                                            {{ cluster.name }}
                                        </a>
                                    </td>
                                    <td class="text-center">{{ cluster.users | length }}</td>
                                    <td class="text-center">{{ cluster.total('xp') }}</td>
                                    <td class="text-center">{{ cluster.total('discovered') }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td class="text-center" colspan="4">
                                        <em>Ce joueur ne fait parti d'aucun groupe</em>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="row" id="listPokemon">
                <div class="col-xs-12">
                    <div class="panel">
                        <div class="panel-heading">
                            Pokedex
                        </div>
                    </div>
                </div>
                {% for pokemon in listPokemon %}
                    <div class="col-sm-4 col-xs-6">
                        <div class="panel pokemon">
                            <div class="panel-body">
                                <img src="{{ pokemon.pokemon.image }}" />
                                <span class="cp">{{ pokemon.cp }}</span>
                                <span class="pokeball">
                                    {% transchoice pokemon.pokeball %}
                                        {0} Erreur|
                                        {1} Pokeball|
                                        {2} Superball|
                                        {3} Hyperball|
                                        [4,Inf[ Inconnue
                                    {% endtranschoice %}
                                </span>
                            </div>
                            <div class="panel-footer">
                                <span class="title">{{ pokemon.pokemon.name }}</span>
                                <span class="type">{{ pokemon.pokemon.type }}</span>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-sm-12 text-center">
                        <em>Aucun Pokémon</em>
                    </div>
                {% endfor %}
            </div>

        </div>
    </div>
{% endblock %}

{% block javascript %}
    <script>
        $(function() {
           $('#refresh').on('click', function() {
                if($(this).hasClass('loading')) {
                    return alert('Patience ...');
                } else {
                    $(this).addClass('loading');
                    $.get('{{ path('refresh') }}', function() {
                        $(this).removeClass('loading');
                        document.location.reload();
                    });

                    return false;
                }
           });
        });
    </script>
{% endblock %}
